<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:jwlMediaWin="clr-namespace:JwlMediaWin"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:viewModel="clr-namespace:JwlMediaWin.ViewModel">

    <!--
        The "shared" directive is needed if we reopen the sample window a few times - WPF will otherwise
        reuse the same context menu (which is a resource) again (which will have its DataContext set to the old TaskbarIcon)
    -->
    
    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Enable Fix" 
                  IsChecked="{Binding IsFixEnabled}"
                  IsCheckable="true" />
        <MenuItem Header="Keep on Top" 
                  IsChecked="{Binding IsKeepOnTopEnabled}"
                  IsCheckable="true"/>
        <MenuItem Header="Help" Command="{Binding ShowHelpPageCommand}" />
        <Separator />
        <MenuItem Header="Stop JWL Media Fix" Command="{Binding ExitAppCommand}" />
    </ContextMenu>

    <!-- the application's NotifyIcon - started from App.xaml.cs. Declares its own view model. -->
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="/icon.ico"
                    ToolTipText="Right-click for menu"
                    ContextMenu="{StaticResource SysTrayMenu}" />

</ResourceDictionary>